<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/curPref"
        android:text="Current Preference: null"/>




    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/prefDrop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"></com.jaredrummler.materialspinner.MaterialSpinner>

    <android.support.design.button.MaterialButton
        android:id="@+id/setPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Set Preferences"
        android:textSize="20sp" />

</LinearLayout>